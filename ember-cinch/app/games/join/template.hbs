{{#paper-content padding=true}}
    <p>
        {{t "selectSeat" gameId=game.id}}
    </p>

    <div class="layout-column layout-align-center flex-75">
        <div class="layout-row layout-align-center">
            {{player-seat label=(t "north") seat="north" takeSeat=(action takeSeat)}}
        </div>

        <div class="layout-row layout-align-center">
            {{player-seat label=(t "west") seat="west" takeSeat=(action takeSeat)}}
            {{player-seat label=(t "east") seat="east" takeSeat=(action takeSeat)}}
        </div>

        <div class="layout-row layout-align-center">
            {{player-seat label=(t "south") seat="south" takeSeat=(action takeSeat)}}
        </div>
    </div>
{{/paper-content}}
