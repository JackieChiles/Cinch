<div class="flex layout-row top-game-board-row">
    <div class="player-hand-vertical">
        {{player-hand user=leftOpponent cards=leftOpponentHand}}
    </div>

    <div class="flex layout-column layout-align-center middle-column">
        <div class="player-hand-horizontal">
            {{player-hand user=partner cards=partnerHand}}
        </div>

        <div class="play-surface">
            <div class="play-area horizontal partner"></div>
            <div class="play-area opponents">
                <div class="play-area horizontal"></div>
                <div class="play-area horizontal"></div>
            </div>
            <div class="play-area horizontal self"></div>
        </div>
    </div>

    <div class="player-hand-vertical">
        {{player-hand user=rightOpponent cards=rightOpponentHand}}
    </div>
</div>

<div class="player-hand-horizontal player-hand-self">
    {{player-hand user=self cards=selfHand}}
</div>
